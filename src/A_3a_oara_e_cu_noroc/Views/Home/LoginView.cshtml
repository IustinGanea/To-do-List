@model A_3a_oara_e_cu_noroc.Model.UserPw
@{
    ViewData["Title"] = "Login";
}<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="icon" href="../../favicon.ico">

    <title>LOG IN</title>



</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <form class="form-signin" asp-controller="Home" asp-action="SignIn">
                    <div asp-validation-summary="ModelOnly"></div>
                    <h2 style="text-align:center;" class="form-signin-heading wrap">Please sign in</h2>

                    <img class="profile-img" src="https://cdn0.iconfinder.com/data/icons/seo-smart-pack/128/grey_new_seo-43-512.png" alt="to-do-list">
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon">
                            <i class="glyphicon glyphicon-user"> </i>
                        </span>
                        <label for="username" class="sr-only"> Username                        </label>
                       
                        <input asp-for="username"   type="text" class="form-control" name="username" id="username" placeholder="Enter your Username" />

                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <label for="inputPassword" class="sr-only">Password</label>
                        <input asp-for="parola" type="password" id="inputPassword" class="form-control" placeholder="Password" required>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" value="remember-me"> Remember me
                        </label>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">  SignIn  <i class="glyphicon glyphicon-ok"></i></button>
                </form>
            </div>
        </div>
    </div>
</body>

</html>